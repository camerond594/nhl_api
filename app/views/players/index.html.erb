<main>
    <h1>NHL API Visualized</h1>
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Page Link</th>
            </tr>
        </thead>
        <tbody>
            <% @players.each do |player| %>
                <tr>
                    <td><%= player.first_name %></td>
                    <td><%= player.last_name %></td>
                    <td><%= link_to "Player Info", player_path(player.slug) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</main>